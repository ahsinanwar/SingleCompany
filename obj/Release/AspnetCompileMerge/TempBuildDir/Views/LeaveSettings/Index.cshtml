
@{
    ViewBag.Title = "Index";
}

<h2>Leaves Settings</h2>
 <section class="col-md-6">
     <header><h4>Add Leave Balance</h4></header>
        @using (Html.BeginForm("AddLeaveQuota", "LeaveSettings", FormMethod.Post))
        {
        <article class="row">
            <section class="col-md-6">
                <div class="row">
                        <div class="col-md-6">
                            <label>Select Category</label>
                        </div>
                        <div class="col-md-6">
                            @Html.DropDownList("EmployeeCat",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                        </div>
                    </div>
                <div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Casual Leaves</label>
                        </div>
                        <div class="col-md-6">
                            <input id="CLeaves" name="CLeaves" type="number" class="form-control"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Annual Leaves</label>
                        </div>
                        <div class="col-md-6">
                            <input id="ALeaves" name="ALeaves" type="number" class="form-control"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Sick Leaves</label>
                        </div>
                        <div class="col-md-6">
                            <input id="SLeaves" name="SLeaves" type="number" class="form-control"/>
                        </div>
                    </div>
                </div>
                <p class="ErorrMessage">@ViewBag.CMessage</p>
                <div class="row" style="margin-left:10%; margin-bottom:3%">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        <input type="submit" value="Save"  class="btn btn-sm btn-success"/>
                    </div>
                </div>
            </section>
            <section class="col-md-6">

            </section>
        </article>
        }
    </section>

