@model WMS.Models.LvQuota

@{
    ViewBag.Title = "Create";
}

<h2>Create Leave Quota</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Emp No</label>
            <div class="col-md-10">
                @*@Html.TextBoxFor(model => model.EmpID)*@
                @Html.TextBox("EmpNo",null,new { @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
           <div class="control-label col-md-2">Casual Leaves</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.A,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.A)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Annual Leaves</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.B,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.B)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Sick Leaves</div>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.C,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.C)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
 @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}

 